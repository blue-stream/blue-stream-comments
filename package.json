{
  "name": "blue-stream-template",
  "version": "0.0.0",
  "description": "Blue Stream micro-service template for future services",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/index.ts",
    "start": "node ./dist/index.js",
    "test": "mocha --recursive -r ts-node/register src/**/*.spec.ts --exit",
    "pretest": "set NODE_ENV=test",
    "test:validation": "set NODE_ENV=test&& mocha --recursive -r ts-node/register \"src/**/*.validator.spec.ts\" --exit",
    "test:integration": "set NODE_ENV=test&& mocha --recursive -r ts-node/register \"src/**/*.router.spec.ts\" --exit",
    "test:repository": "set NODE_ENV=test&& mocha --recursive -r ts-node/register \"src/**/*.repository.spec.ts\" --exit",
    "test:coverage": "set NODE_ENV=test&& nyc npm test",
    "coverage-test": "set NODE_ENV=test&& nyc check-coverage --lines 95 --functions 95 --branches 95",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Ron Borysovski, Almog Vagman & Yonatan Tal",
  "license": "ISC",
  "devDependencies": {
    "@types/amqplib": "^0.5.9",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.38",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.9",
    "@types/passport": "^0.4.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.6",
    "chai": "^4.2.0",
    "jsonwebtoken": "^9.0.0",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.7.3",
    "nyc": "^12.0.2",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "amqplib": "^0.5.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "mongoose": "^5.3.12",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "winston": "^3.2.1",
    "winston-elasticsearch": "^0.7.9"
  }
}
